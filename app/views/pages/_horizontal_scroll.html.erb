<!-- app/views/annonces/_horizontal_scroll.html.erb -->
<div class="my-8">
  <div class="relative">
    <% if annonces.any? %>
      <div class="flex overflow-x-auto pb-4 hide-scrollbar space-x-4 px-4">
        <% annonces.each do |annonce| %>
          <div class="flex-shrink-0 w-64 bg-white p-4 rounded shadow hover:shadow-lg transition">
            <% if annonce.photo.attached? %>
              <%= image_tag annonce.photo, class: "w-full h-40 object-cover rounded-t-lg mb-2" %>
            <% else %>
              <div class="w-full h-40 bg-gray-200 rounded-t-lg mb-2 flex items-center justify-center">
                <span class="text-gray-500">Pas d'image</span>
              </div>
            <% end %>
            
            <h2 class="text-lg font-semibold mb-1 truncate"><%= annonce.nom_produit %></h2>
            <p class="text-sm text-gray-600 mb-2 line-clamp-2"><%= annonce.description %></p>
            <p class="font-bold text-indigo-600"><%= annonce.prix %> MAD</p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-gray-500 py-8">Aucune annonce disponible</p>
    <% end %>
  </div>
</div>