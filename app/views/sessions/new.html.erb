

<div class="flex flex-col md:flex-row justify-center items-center gap-8 px-4 mt-8">
  
  <div class="bg-white rounded-xl shadow-md p-8 w-full md:w-1/2 flex justify-center items-center">
   
    <%= image_tag 'Renu5.png',alt:'avito3' ,class:'h-100 w-auto mr-4 mt-8' %>
  </div>

  <!-- Carte de connexion -->
  <div class="bg-white rounded-xl shadow-md p-8 w-full md:w-1/2">
  <h1 class="text-2xl font-semibold mb-10 mt-32 text-center">Connectez-vous Ã  votre boutique</h1>
  
    <%= form_for(:session, url: login_path, html: { class: "space-y-6", role: "form", data: { turbo: false } }) do |f| %>
       
      
      <div class="flex flex-col space-y-4">
        <div class="flex flex-col">
          <%= f.label :email, "Email", class: "text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, class:"p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder:"Entrer votre email" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :password, "Mot de passe", class: "text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class:"p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder:"Entrer votre mot de passe" %>
        </div>

        <div>
          <%= f.submit "Se connecter", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

    <% end %>

    <p class="mt-4 text-center text-sm">
      Pas encore inscrit ?
      <%= link_to "S'inscrire !", inscription_path, class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</div>
