<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col md:flex-row gap-12 bg-white shadow-md rounded-lg overflow-hidden max-w-6xl w-full p-8">
    
    <!-- Formulaire à gauche -->
    <div class="w-full md:w-1/2 p-4">
      <h2 class="text-3xl font-extrabold text-gray-900 mb-6">Créer un compte</h2>

      <%= form_with model: @utilisateur, local: true, class: "space-y-6" do |f| %>
        <%= render 'shared/error_messages' %>

        <div>
          <%= f.label :nom, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :nom, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.submit "Créer mon compte", class: "w-full py-3 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition duration-200" %>
        </div>
      <% end %>

      <p class="mt-4 text-sm text-center text-gray-600">
        Déjà inscrit ?
        <%= link_to "Se connecter", login_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>

    <!-- Image à droite -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-4">
      <%= image_tag 'Renu5.png', alt: 'Illustration', class: 'object-cover h-96 w-full rounded-lg shadow-md' %>
    </div>

  </div>
</div>
