<div class="max-w-4xl mx-auto px-4 py-8 mt-16">
  <% if @annonce %>
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <!-- En-tête avec titre et bouton retour -->
      <div class="border-b border-gray-200 px-6 py-4 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-800"><%= @annonce.nom_produit %></h1>
        <%= link_to annonces_path, class: "flex items-center text-blue-600 hover:text-blue-800 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Retour aux annonces
        <% end %>
      </div>

      <div class="md:flex">
        <!-- Section photo -->
        <div class="md:w-1/2 p-6">
          <% if @annonce.photo.attached? %>
            <div class="bg-gray-100 rounded-lg overflow-hidden flex items-center justify-center h-80">
              <%= image_tag @annonce.photo, class: "object-cover w-full h-full" %>
            </div>
          <% else %>
            <div class="bg-gray-100 rounded-lg flex items-center justify-center h-80 text-gray-400">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          <% end %>
        </div>

        <!-- Section détails -->
        <div class="md:w-1/2 p-6">
          <div class="space-y-4">
            <div>
              <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Description</h2>
              <p class="mt-1 text-gray-700"><%= @annonce.description %></p>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Prix</h2>
                <p class="mt-1 text-2xl font-bold text-blue-600"><%= number_to_currency(@annonce.prix) %></p>
              </div>

              <div>
                <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Catégorie</h2>
                <p class="mt-1 text-gray-700">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= @annonce.nom_categorie %>
                  </span>
                </p>
              </div>
            </div>

            <div>
              <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Publié le</h2>
              <p class="mt-1 text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <%= l(@annonce.date_publication, format: :long) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-md overflow-hidden p-6 text-center">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h3 class="mt-3 text-lg font-medium text-gray-900">Annonce introuvable</h3>
      <div class="mt-2 text-sm text-gray-500">
        <p>Cette annonce n'existe pas ou a été supprimée.</p>
      </div>
      <div class="mt-6">
        <%= link_to 'Voir toutes les annonces', annonces_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  <% end %>
</div>