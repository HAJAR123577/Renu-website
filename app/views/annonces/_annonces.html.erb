<div class="space-y-12">
  <% @annonces.in_groups_of(6, false).each do |groupe_annonces| %>
    <div class="overflow-x-auto">
      <div class="flex space-x-6 pb-4">
        <% groupe_annonces.each do |annonce| %>
          <div class="min-w-[250px] bg-white rounded-2xl shadow-lg overflow-hidden flex-shrink-0 hover:shadow-xl transition duration-300">
            <!-- Section Photo -->
            <div class="h-40 w-full bg-gray-100 flex items-center justify-center overflow-hidden">
              <% if annonce.photo.attached? %>
                <%= image_tag annonce.photo, class: "w-full h-full object-cover", alt: annonce.nom_produit %>
              <% else %>
                <div class="text-gray-400 flex flex-col items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span class="text-xs mt-2">Pas de photo</span>
                </div>
              <% end %>
            </div>

            <!-- Section DÃ©tails -->
            <div class="p-4">
              <h3 class="text-lg font-bold text-gray-800 mb-2 truncate"><%= annonce.nom_produit %></h3>
              <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= annonce.description %></p>
              
              <div class="flex justify-between items-center mt-4">
                <p class="text-blue-600 font-semibold"><%= number_to_currency(annonce.prix, unit: "MAD ") %></p>
                <p class="text-xs text-gray-400"><%= time_ago_in_words(annonce.created_at) %> ago</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>