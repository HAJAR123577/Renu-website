<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl md:text-3xl font-bold text-center text-blue-700 mb-8">Créer une annonce</h1>

  <div class="flex flex-col md:flex-row gap-8 items-start">
    <!-- Formulaire compact -->
    <div class="w-full md:w-[45%] bg-white p-6 rounded-xl shadow-md">
      <%= form_with(model: @annonce, local: true, html: { multipart: true, class: "space-y-4" }) do |form| %>
        
        <div>
          <%= form.label :nom_produit, "Nom du produit", class: "block text-gray-700 font-medium mb-1 text-sm" %>
          <%= form.text_field :nom_produit, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :description, "Description", class: "block text-gray-700 font-medium mb-1 text-sm" %>
          <%= form.text_area :description, rows: 2, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :prix, "Prix (€)", class: "block text-gray-700 font-medium mb-1 text-sm" %>
          <%= form.number_field :prix, step: 0.01, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :nom_categorie, "Catégorie", class: "block text-gray-700 font-medium mb-1 text-sm" %>
          <%= form.select :nom_categorie, ['Électronique', 'Maison', 'Vêtements', 'Livres', 'Sport'], 
                { prompt: "Sélectionner une catégorie" }, 
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :photo, "Photo", class: "block text-gray-700 font-medium mb-1 text-sm" %>
          <%= form.file_field :photo, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-1 focus:ring-blue-500" %>
        </div>

        <div class="pt-2 text-center">
          <%= form.submit "Publier", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 text-sm rounded-md" %>
        </div>

      <% end %>
    </div>

    <!-- Image à droite, plus petite -->
    <div class="w-full md:w-[50%] sticky top-12">
      <div class="bg-gray-100 rounded-xl overflow-hidden shadow-md h-[400px] flex items-center justify-center">
        <img src="https://images.unsplash.com/photo-1555529669-e69e7aa0ba9a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" 
             alt="Exemple de produit" 
             class="object-cover w-full h-full">
      </div>
    </div>
  </div>
</div>
